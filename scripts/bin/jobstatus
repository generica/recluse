function usage {

	echo "usage: $0 <o|e|p|t|m|r> <job number>"
	echo "       show [o]utput"
        echo "            [e]rror"
        echo "            [p]bs-script for a job"
        echo "            [t]mpdir for a job"
        echo "            [m]emory usage for a job"
        echo "            [r]unning processes for a job"
	exit
}

function check_if_running {

	state=$(qstat -f $1 | awk '/job_state/{print $3}')

	if [ $state != "R" ]
	then
		echo "$job is not yet running"
		exit
	fi
}

function check_if_job {

	qstat $job >/dev/null 2>&1
	isjob=$?

	if [ $isjob -ne 0 ]
	then
		echo "$job doesn't appear to be a job"
		exit
	fi

}

if [ $# -ne 2 ]
then
	usage
fi

job=$2

check_if_job $job
check_if_running $job
leadnode=$(qstat -f $job | awk 'BEGIN{ FS="[ /]+" }/exec_host/{ print $4 }')
hashname=$(qstat -f $job | awk '/Job Id/{print $3}' | sed -e 's/edda-m.vpac.org/edda/')

case "$1" in
	t) ssh $leadnode "ls -l /tmp/${job}.*/" ;;
	m) ssh $leadnode "/usr/local/recluse/scripts/sbin/memory_used_by_job ${job}" ;;
	o) ssh $leadnode "cat /usr/spool/PBS/spool/${hashname}.OU" ;;
	e) ssh $leadnode "cat /usr/spool/PBS/spool/${hashname}.ER" ;;
	p) ssh $leadnode "cat /usr/spool/PBS/mom_priv/jobs/${hashname}.SC" ;;
	r) ssh $leadnode "ps axu | egrep -f /dev/cpuset/torque/${hashname}/tasks" ;;
	*) usage ;;
esac
